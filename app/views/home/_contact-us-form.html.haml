= form_tag '/contact', :remote=>true, :class=>'contact-form', :style=>'margin: 0' do
  .row
    .large-12.columns
      %h5 Contact Us

  .row
    .large-11.columns
      = text_field_tag 'name', nil, :placeholder=>'Name'
  .row
    .large-11.columns
      = text_field_tag 'email', nil, :placeholder=>'Email (e.g. name@ainpain.com)', :type=>'email'
  .row
    .large-11.columns
      = text_field_tag 'phone', nil, :placeholder=>'Phone'
  .row
    .large-11.columns
      = text_area_tag 'pain', nil, :placeholder=>'What kind of pain are you experiencing?'
  .row
    .large-4.columns.large-offset-7
      = submit_tag 'Submit', :class=>'form-button  tiny', :type=>'submit'

