#header
  #nav-address-bar
    .row.show-for-small
      .small-12.columns
        .phone
          %p= link_to 'Call for FREE Consultation!', 'tel:2129205457'
          = link_to '212-203-2813', 'tel:2122032813'
    .row.hide-for-small
      %ul
        %li.large-4.columns{:style=>'padding:0;'}
          #nav-address
            %p= link_to "<span itemprop='streetAddress'>115 East 57th Street, #1210</span><span itemprop='addressLocality'> New York</span>, <span itemprop='addressRegion'> NY</span><span itemprop='postalCode'> 10022</span>".html_safe, 'https://www.google.com/maps/preview#!data=!1m4!1m3!1d5344!2d-73.9701584!3d40.762293!4m15!3m12!1m0!1m1!1s115+E+57th+St%2C+New+York%2C+NY!3m8!1m3!1d668!2d-73.9710811!3d40.7623123!3m2!1i1280!2i679!4f13.1!7m1!3b1&fid=0', target:'blank', itemprop:"address", itemscope:'', itemtype:"http://schema.org/PostalAddress"

