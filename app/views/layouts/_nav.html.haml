          #nav-book-today
            = link_to "Same day appointments available. <span>CALL NOW!</span>".html_safe,'#', :'data-reveal-id'=>'myModal'
        %li.large-2.columns{:style=>'padding:0'}
          #nav-phone
            %p= link_to "<span itemprop='telephone'>(212) 203-2813</span>".html_safe, 'tel:2122032813'
        %li.large-2.columns{:style=>'padding:0'}
          #nav-social
            %p.hide-for-medium Like us on:
            = link_to (image_tag 'facebook-icon.png'), 'https://www.facebook.com/AinsworthInstitute', :target=>'_blank'
            = image_tag 'youtube-icon.png'
            = image_tag 'twitter-icon.png'
