    #nav-logo
      = link_to (image_tag 'banner.jpg', :itemprop=>'image'), root_path
    / #associate-logo
    /   %p in association with
    /   = image_tag 'banner.jpg'
    #nav-main-items.hide-for-small
      %ul
        %li
          = link_to 'About Us', '/about-us'
        %li
          = link_to 'Types of Pain', '/types-of-pain'
        %li
          = link_to 'Treatment', '/treatment'
        %li
          = link_to 'News', '/news'
        %li
          = link_to 'Contact', '/contact'
  .row.show-for-small
    #mobile-nav
      #small-logo.small-6.columns{:style=>'padding:5px'}
        = link_to (image_tag 'banner.jpg'), root_path
      #mobile-nav-menu.large-1.small-2.columns


